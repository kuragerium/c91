.loading {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  cursor: pointer;
  transition: opacity .3s, visibility .3s .3s;

  .loading__logo {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200px;
    height: 104px;
    margin-top: -52px;
    margin-left: -100px;

    img {
      width: 200px;
      height: 104px;
    }
  }
}
