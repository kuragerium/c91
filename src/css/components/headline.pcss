.headline {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin: 0 auto;

  &::before,
  &::after {
    display: block;
    content: '';
    width: 50%;
    height: 1px;
    background-color: var(--primary);
  }

  &__text {
    font-family: var(--bold-font-famliy);
    font-size: 2.5rem;
    letter-spacing: 3px;
    padding: 0 20px 0 23px;
    color: var(--primary);
    background-color: var(--bg);
  }
}
